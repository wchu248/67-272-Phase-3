<h2>Current Item Prices</h2>
<h4><%= link_to 'Add a New Price', new_item_price_path %></h4>

<% unless @active_items.empty? %>
  <table class="table">
		<tr>
			<th>Item</th>
			<th>Price</th>
		</tr>
		<% for item in @active_items %>
		<tr>
			<td><%= link_to item.name, item_path(item) %></td>
			<% if item.current_price.nil? %>
				<td>N/A</td>
			<% else %>
				<td><%= "$" + number_with_delimiter(number_with_precision(item.current_price, precision: 2)) %></td>
			<% end %>
		</tr>
		<% end %>
	</table>
<% else %>
	N/A
<% end %>

<!-- Add the pagination using will_paginate gem -->
<span class="smtext">
<%= will_paginate @active_items, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
</span>