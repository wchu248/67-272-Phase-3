<h2>Update Item</h2>

<%= simple_form_for(@item, html: { class: 'form-horizontal' }) do |f| %>
	<fieldset>
		<%= f.input :name %>
		<%= f.input :description %>
		<%= f.label :category %>
		<%= f.select :category, Item::CATEGORIES %>
		<%= f.input :color %>
		<%= f.input :weight %>
		<%= f.input :reorder_level %>
		<%= f.input :active, as: :boolean, checked_value: true, unchecked_value: false %>
		<div class="form-actions">
			<%= f.submit class: 'button' %>
			<%= link_to 'Cancel', items_path, :class => 'button secondary' %>
		</div>
	</fieldset>
<% end %>