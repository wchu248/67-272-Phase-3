<h4>Inactive Items</h4>
<table class="table">
	<tr>
		<th>Name</th>
		<th>Inventory</th>
		<th></th>
		<th></th>
	</tr>
	<% for item in @inactive_items %>
	<tr>
		<td><%= link_to item.name, item_path(item) %></td>
		<td align="right"><%= number_with_delimiter(item.inventory_level) %></td>
		<td><%= link_to 'Edit', edit_item_path(item), class: "button tiny radius"%></td>
		<td><%= link_to 'Destroy', item, class: "button tiny round alert", confirm: 'Are you sure?', method: :delete %></td>
	</tr>
	<% end %>
</table>